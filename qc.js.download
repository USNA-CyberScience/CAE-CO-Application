function show()
{
   var elems = document.getElementsByTagName('span');

    for (var i = 0; i<elems.length; i++) {
        if( elems[i].className == 'blank' || 
            elems[i].className == 'xblank' || 
            elems[i].className == 'lblank' ||
            elems[i].className == 'hblank' ||
            elems[i].className == 'sblank' ||
            elems[i].className == 'llblank' ||
          elems[i].className == 'answer' ) 
           elems[i].style.color = 'red';
    }

    elems = document.getElementsByTagName('div');

    for (i = 0; i<elems.length; i++) {
        if( elems[i].className == 'answer' )
          elems[i].style.color = 'red';
    }

}

function hide()
{
    var elems = document.getElementsByTagName('span');

    for (var i = 0; i<elems.length; i++) {
        if( elems[i].className == 'blank' || 
            elems[i].className == 'xblank' || 
            elems[i].className == 'lblank' ||
            elems[i].className == 'hblank' ||
            elems[i].className == 'sblank' ||
            elems[i].className == 'llblank' ||
          elems[i].className == 'answer' ) 
            elems[i].style.color = 'white';
    }


    elems = document.getElementsByTagName('div');

    for (i = 0; i<elems.length; i++) {
        if( elems[i].className == 'answer' )
          elems[i].style.color = 'white';
    }

}

